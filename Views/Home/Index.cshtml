@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

@* Creates a header with the team name if a team name is selected*@
<h3 @(Model.TeamName == ViewBag.SelectedTeam ? "btn-primary" : "btn-outline-secondary")>@Model.TeamName</h3>

@* Displays bowler contact info *@
@foreach (var x in Model.Bowlers)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @x.BowlerFirstName @x.BowlerMiddleInit @x.BowlerLastName
                <span class="badge badge-pill badge-light" style="float:right">
                    <small><p>Phone Number: @x.BowlerPhoneNumber</p></small>
                </span>
            </h4>
            <div class="card-text p-1">
                <p>
                    @x.BowlerAddress <br />
                @x.BowlerCity, @x.BowlerState @x.BowlerZip
                </p>
            </div>
        </div>
    </div>
}

<div page-info="@Model.PageNumberingInfo" page-action="Index"
     page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
     page-url-teamname="@Model.TeamName"
     class="btn-group pull-right m-1">

</div>